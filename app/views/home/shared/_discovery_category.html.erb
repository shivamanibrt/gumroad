<div class="flex flex-col gap-4 rounded-lg border border-black <%= bg %> p-4 lg:p-8" role="listitem">
  <%= link_to discover_taxonomy_url(path, host: DISCOVER_DOMAIN), class: "flex flex-col gap-4 no-underline" do %>
    <div class="flex flex-col gap-3">
      <%= image_tag icon,
          alt: title,
          loading: "lazy",
          class: "w-[100px] h-[72px]" %>
      <div class="text-3xl lg:text-4xl hover:underline">
        <%= title %>
      </div>
      <div class="text-xl lg:text-2xl">
        <%= description %>
      </div>
    </div>
  <% end %>

  <div class="flex flex-col gap-3">
    <div class="text-base">Popular tags</div>
    <div class="flex flex-wrap gap-2">
      <% tags.each do |tag| %>
        <%= link_to(
          tag,
          discover_taxonomy_url(path, tags: tag, host: DISCOVER_DOMAIN),
          class: "px-3 py-1 text-sm bg-white rounded-full border border-black no-underline hover:-translate-x-1 hover:-translate-y-1 hover:shadow-[4px_4px_0_0_#000000] transition-all"
        ) %>
      <% end %>
    </div>
  </div>
</div>
